<% layout('layouts/mainTemplate') %>

<div class="row">
    <div class="col-12">
        <div class="card border-light p-4">
            <div class="row align-items-center">
                <aside class="col-md-3">
                    <a href="#">
                        <img src="<%=product.image.url%>" alt="product-image">
                    </a>
                </aside> <!-- col.// -->
                <div class="col-md-6">
                    <div class="info-main">
                        <h5> <%=product.name%> </h5>
                        <div class="d-flex my-3">
                            <span class="small text-success ml-3"><i class="fas fa-shopping-cart mr-1"></i><%=product.productQuantity%> orders</span>
                        </div>
                        <p><%=product.description%></p>
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="d-flex align-items-center">
                        <span class="h5 mb-0 mr-2">
                            $<%=product.price%>
                        </span>
                    </div> <!-- info-price-detail // -->
                    <span class="text-success small"><i class="fas fa-shipping-fast mr-1"></i>Free shipping</span>
                    <div class="mt-4">
                        <form action="/techroom/cart" method="POST">
                            <label style="display:none" for="name" class="form-label"></label>
    <input style="display:none" name="name" value="<%=product.name%>" id="name">
    <button class="btn btn-primary btn-sm btn-block">Add to Cart</button>
                        </form>
                        <a class="btn btn-primary btn-sm btn-block mt-4" href="/techroom/<%=product.category%>">
                            Back to <%=product.category%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<h4 style="color: rgb(0, 0, 0); text-align:center">Similar Products</h4>